extends layout

block content
  
  div(id='main')
    div(id='grid')
      - var i = 0, j = 0, count = 0;
      while i < 16
        - j = 0
        while j < 16
          button(id="note" + count)
          - count++;
          - j++
        - i++

    div(id='controls')
      button(id='clearbutton')
        i(class='fa fa-trash-o')
      button(id='waveforms')
        //- i(class='fa fa-align-center')


  div(id='menuButton')
    i(class='fa fa-bars')

  div(id='menu' style='display: none')
    input(
      type='range'
      id='volume'
      min='0'
      max='1'
      step='0.01'
      value='0.3'
    )

