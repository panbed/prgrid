extends layout

block content
  

  div(id='main')
    div(id='tabs')
      button(class='tabbutton' id='tab1') 1
      button(class='tabbutton' id='tab2') 2
      button(class='tabbutton' id='tab3') 3
    
    div(id='grid')
      - var i = 0, j = 0, count = 0;
      while i < 16
        - j = 0
        while j < 16
          button(id="note" + count)
          - count++;
          - j++
        - i++

    div(id='controls')
      button(id='savebutton')
        ion-icon(name="save-outline")
      button(id='clearbutton')
        ion-icon(name="trash-outline")
      button(id='waveforms')
        ion-icon(name="trash-outline")


  div(id='menuButton')
    i(class='fa fa-bars')

  div(id='menu' style='display: none')
    input(
      type='range'
      id='volume'
      min='0'
      max='1'
      step='0.01'
      value='0.3'
    )
    input(
      type='text'
      id='loadtext'
    )
    br
    button(id='loadbutton')
      i(class='fa fa-upload')
    button(id='exportbutton')
      //- p export
      i(class='fa fa-floppy-o')

