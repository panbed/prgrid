extends layout

block content
  div(id='main')
    div(id='tabs')
      button(class='tabbutton' id='tab1') a
      button(class='tabbutton' id='tab2') b
      button(class='tabbutton' id='tab3') c

    div(id='layers')
      button(class='layerbutton' id='layer1') 1
      button(class='layerbutton' id='layer2') 2
      button(class='layerbutton' id='layer3') 3
      button(class='layerbutton' id='layer4') 4

    //  is this bad? yeaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
    - var count = 0;
    div(class='gridstyle' id='grid1')
      - var i = 0, j = 0
      while i < 16
        - j = 0
        while j < 16
          button(id="note" + count)
          - count++;
          - j++
        - i++

    div(class='gridstylehidden' id='grid2')
      - var i = 0, j = 0;
      while i < 16
        - j = 0
        while j < 16
          button(id="note" + count)
          - count++;
          - j++
        - i++

    div(class='gridstylehidden' id='grid3')
      - var i = 0, j = 0;
      while i < 16
        - j = 0
        while j < 16
          button(id="note" + count)
          - count++;
          - j++
        - i++

    div(class='gridstylehidden' id='grid4')
      - var i = 0, j = 0;
      while i < 16
        - j = 0
        while j < 16
          button(id="note" + count)
          - count++;
          - j++
        - i++

    div(id='controls')
      button(id='playbackbutton')
        ion-icon(name="pause-outline" id='playbackionbutton')
      button(id='clearbutton')
        ion-icon(name="trash-outline")
      button(id='savebutton')
        ion-icon(name="save-outline")
      button(id='waveforms')
        ion-icon(name="trash-outline")


  div(id='menuButton')
    i(class='fa fa-bars')

  div(id='menu' style='display: none')
    input(
      type='range'
      id='volume'
      min='0'
      max='1'
      step='0.01'
      value='0.3'
    )
    input(
      type='text'
      id='loadtext'
    )
    br
    button(id='loadbutton')
      i(class='fa fa-upload')
    button(id='exportbutton')
      //- p export
      i(class='fa fa-floppy-o')

